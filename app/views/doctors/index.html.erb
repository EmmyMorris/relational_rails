<%= link_to "Hospital Index", "/hospitals" %>
<%= link_to "Patient Index", "/patients" %>
<%= link_to "Clinic Index", "/clinics" %>
<%= link_to "Doctor Index", "/doctors" %>
<a href="/doctors/:id"></a>
<h1>All Doctors</h1>

<% @doctors.each do |doctor| %>
  <h3>Name: <%= doctor.name %></h3>
  <p>id: <%= doctor.id %></p>
  <p>Available: <%= doctor.available %></p>
  <p>Rating: <%= doctor.rating %></p>
  <p>Clinic id: <%= doctor.clinic_id %></p>
  <p>Updated at: <%= doctor.updated_at %></p>
  <p>Created at: <%= doctor.created_at %></p>
  <%= button_to "Update Doctor #{doctor.name}", "/doctors/#{doctor.id}/edit", method: :get %>
  <br>
  <%= link_to "Delete Doctor #{doctor.name}", "/doctors/#{doctor.id}", method: :delete %>
<% end %>
