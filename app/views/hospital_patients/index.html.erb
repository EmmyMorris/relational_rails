<h1>Patient's Attributes</h1>

<%= link_to "Sort Alphabetically", "/hospitals/#{@hospital.id}/patients?order_alphabetically=true" %>
<br>
<%= link_to "Create Patient", "/hospitals/#{@hospital.id}/patients/new" %>

<% @patients.each do |patient| %>
  <h3>Name: <%= patient.name %></h3>
  <p>id: <%= patient.id %></p>
  <p>Visitors: <%= patient.visitors %></p>
  <p>Age: <%= patient.age %></p>
  <%= button_to "Edit Patient #{patient.name}", "/hospitals/#{@hospital.id}/patients/#{patient.id}/edit", method: :get %>
<% end %>
