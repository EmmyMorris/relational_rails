<%= form_with url: "/hospitals/#{@hospital.id}/patients", method: :post, local: true do |form| %>
  <%= form.label :patient_name %>
  <%= form.text_field :name %><br><br>
  <%= form.label :age %>
  <%= form.text_field :age %><br><br>
  <%= form.label :visitors %>
  <%= form.text_field :visitors %><br><br>
  <%= form.submit "Create Patient" %>
<% end %>
